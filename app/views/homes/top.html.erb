<% flash.each do |key, value| %>
  <p class="info<%= key %>">
    <%= value %>
  </p>
<% end %>

<div class="mx-auto">
  <h1 class="mt-3">welcome to <span class="fas fa-book"></span>Bookers !!</h1>
  
  <p>In <span class="fas fa-book"></span>Bookers,</p>
  <p class="mt-3">you can share and exchange your opinions , inpressions , and emotions</p>
  <p class="mt-3">about various books!</p>
  
  <div class="d-flex flex-column bd-highlight mb-3">
    <div class="p-2 bd-highlight">
      <!--aタグとlink_toは複合しない-->
        <%= link_to "Log in", new_user_session_path, class: 'btn btn-info btn-sm btn-block mb-3 nav-link text-white' %>
    </div>
    <div class="p-2 bd-highlight">
        <%= link_to "Sign up", new_user_registration_path, class: 'btn btn-success btn-sm btn-block nav-link text-white' %>
    </div>
  </div>
</div>