<!-- ユーザーの詳細 -->
<div class="container px-5 px-sm-0">
  <!--バリデーションのエラーメッセージ-->
  <% if @book.errors.any? %>
    <h3 class="mt-3"><%= @book.errors.count %>errors prohibited this obj from being saved:</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <div class="d-flex flex-row">
    <div class="col-md-3">
      <h2 class="mt-3">User info</h2>
      <div>
        <%= image_tag @user.get_profile_image(100,100) %>
            <table class="table">
              <tbody>
                <tr>
                  <th>name</th>
                  <th><%= @user.name %></th>
                </tr>
                <tr>
                  <th>introduction</th>
                  <th><%= @user.introduction %></th>
                </tr>
              </tbody>
            </table>
            <%= link_to edit_user_path(@user), class: 'btn btn-outline-secondary btn-block' do %>
              <i class="fa-solid fa-user-pen"></i>
            <% end %>
      </div>
      
      <!--book投稿機能 -->
      <h2 class="mt-3">New book</h2>
      <div>
        <%= form_with model: @book do |f| %>
          <div class="form-group">
            <h6>Title</h6>
            <%= f.text_field :title %>
          </div>
          <div class="form-group">
            <h6 class="mt-3">Opinion</h6>
            <%= f.text_area :body %>
          </div>
          <div class="mt-3">
            <%= f.submit 'Create Book' %>
          </div>
        <% end %>
      </div>
    </div>
      <!-- 全ユーザーの投稿一覧 -->
    <div class="col-md-8 offset-md-1 mt-3">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
       <thead>
         <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
         </tr>
       </thead>
       <tbody>
         <% @books.each do |book| %>
          <tr><!--userごとのプロフィール画像を取得-->
            <td><%= image_tag book.user.get_profile_image(100,100) %></td>
            
            <!--取得したtitle名をリンクにしてbook詳細画面へ移行-->
            <td><%= link_to book.title, book_path(book) %></td>
            <td><%= book.body %></td>
          </tr>
         <% end %>
       </tbody>
      </table>
    </div>
  </div>
</div>