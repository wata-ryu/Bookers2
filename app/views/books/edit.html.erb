<div class="container mt-3">
    <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
            <h1>Editing Book</h1>
            <%= form_with model: @book, method: :patch do |f| %>
              <div class="form-group">
                <p>Title</p>
                <div class="field">
                  <%= f.text_field :title, autofocus: true, id:"inputTitle" %>
                </div>
              </div>
              
              <div class="form-group">
                <p>Opinion</p>
                
                <div class="field">
                  <%= f.text_area:body, autofocus: true, id:"inputBody" %>
                </div>
              </div>
              <div>
                  <%= f.submit 'Update Book' %>
              </div>
              
              <div class="field mt-3">
                <%= link_to "Show", book_path %> | <%= link_to "Back", books_path %>
              </div>
            <% end %>
        </div>
    </div>
</div>