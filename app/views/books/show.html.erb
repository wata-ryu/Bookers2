<!-- ユーザーの詳細 -->
<div class="container px-5 px-sm-0">
  <div class="d-flex flex-row">
    <div class="col-md-3">
      <h2 class="mt-3">User info</h2>
      <div>
        <%= image_tag @user.get_profile_image(100,100) %>
          <% if @user == current_user %>
            <table class="table">
              <tbody>
                <tr>
                  <th>name</th>
                  <th><%= @user.name %></th>
                </tr>
                <tr>
                  <th>introduction</th>
                  <th><%= @user.introduction %></th>
                </tr>
              </tbody>
            </table>
            <div class="row">
              <button type="button" class="btn btn-outline-secondary fa-solid fa-user-pen" style="width:250px">
                <%= link_to " ", edit_user_path(@user), class: 'nav-link text-white' %>
              </button>
            </div>
        <% end %>
      </div>
      
      <!--投稿機能 -->
      <h2 class="mt-3">New book</h2>
      <div>
        <%= form_with model: @new_book do |f| %>
          <div class="form-group">
            <h6>Title</h6>
            <%= f.text_field :title %>
          </div>
          <div class="form-group">
            <h6 class="mt-3">Opinion</h6>
            <%= f.text_area :body %>
          </div>
          <div class="mt-3">
            <%= f.submit 'Create Book' %>
          </div>
        <% end %>
      </div>
    </div>
    
    <!--作成したもの単体の詳細画面-->
    <div class="col-md-8 offset-md-1 mt-3">
     <h2>Book detail</h2>
     
      <table class="table">
       <tbody>
          <tr>
            <td><%= image_tag @user.get_profile_image(100,100) %><br>
            
              <%= link_to @user.name, user_path(@user.id) %>
            </td>
            <td><%= link_to @book.title, book_path(@book) %></td>
            <td><%= @book.body %></td>
            <td>
             <% if @book.user == current_user %>
             <button class="btn btn-sm btn-success">
                                               <!--↓エディット画面に、作成した本のidを持っていく-->
              <%= link_to "Edit", edit_book_path(@book.id), class: 'nav-link text-white' %>
             </button>
             <% end %>
            </td>
            <td>
              <% if @book.user == current_user %>
              <button class="btn btn-sm btn-danger">
                <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に削除しますか？" %>
              </button>
              <% end %>
            </td>
          </tr>
       </tbody>
      </table>
    </div>
  </div>
</div>