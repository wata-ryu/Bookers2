<!--コントーラで定義したflash messageを表示-->
<% flash.each do |key, value| %>
  <p class="info<%= key %>">
    <%= value %>
  </p>
<% end %>
<!--バリデーションのエラーメッセージ-->
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<!-- ユーザーの詳細 -->
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2 class="mt-3">User info</h2>
      <div>
        <%= image_tag @user.get_profile_image(100,100) %>
          <table class="table">
            <tbody>
              <tr>
                <th>name</th>
                <th><%= @user.name %></th>
              </tr>
              <tr>
                <th>introduction</th>
                <th><%= @user.introduction %></th>
              </tr>
            </tbody>
          </table>
          <%= link_to edit_user_path(@user), class: 'btn btn-outline-secondary btn-block' do %>
           <i class="fa-solid fa-user-pen"></i>
          <% end %>
            <!--button type="button" class="btn btn-outline-secondary fa-solid fa-user-pen" style="width:250px">
              <!--%= link_to " ", edit_user_path(@user), class: 'nav-link text-white' %-->
            <!--/button-->
      </div>
      
      <!-- 新規投稿機能-->
      <h2 class="mt-3">New book</h2>
      <div>
        <%= form_with model: @book do |f| %>
          <h6>Title</h6>
          <%= f.text_field :title %>
        	
          <h6 class="mt-3">Opinion</h6>
          <%= f.text_area :body %>
        	<div class="mt-3">
          <%= f.submit 'Create Book' %>
          </div>
        <% end %>
      </div>
    </div>
    <!-- 単体のユーザーの投稿一覧 -->
    <div class="col-md-8 offset-md-1 mt-3">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <!--ブロック変数はコントローラではなくここのみで定義しているので＠はつかない-->
          <% @books.each do |book| %>
          <tr>
            <td><%= image_tag book.user.get_profile_image(100,100) %></td>
            
            <td><%= link_to book.title, book_path(book) %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>