<!-- ユーザーの詳細 -->
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col md-3">
      <h2 class="mt-3">User info</h2>
      <div>
        <%= image_tag @user.get_profile_image(100,100) %>
          <% if @user == current_user %>
            <table class="table">
              <tbody>
                <tr>
                  <th>name</th>
                  <th><%= @user.name %></th>
                </tr>
                <tr>
                  <th>introduction</th>
                  <th><%= @user.introduction %></th>
                </tr>
              </tbody>
            </table>
            <button type="button" class="btn btn-outline-secondary fa-solid fa-user-pen" style="width:250px">
              <%= link_to " ", edit_user_path(@user), class: 'nav-link text-white' %>
            </button>
        
        <% end %>
      </div>
      
      <!-- ユーザーの投稿一覧 -->
      <h2 class="mt-3">New book</h2>
      <div>
        <%= form_with model: Book.new do |f| %>
          <h6>Title</h6>
          <%= f.text_field :title %>
        	
          <h6 class="mt-3">Opinion</h6>
          <%= f.text_area :body %>
        	
          <%= f.submit 'Create Book' %>
        <% end %>
      </div>
    </div>  
  </div>    
</div>