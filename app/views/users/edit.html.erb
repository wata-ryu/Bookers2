<div class="container mt-3">
  <!--バリデーションのエラーメッセージ-->
  <% if @user.errors.any? %>
    <h3 class="mt-3"><%= @user.errors.count %>errors prohibited this obj from being saved:</h3>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>
        <%= form_with model: @user do |f| %>
        <div class="form-group">
          <label for="inputName">Name</label>
          <div class="field">
            <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
          </div>
        </div>
        
        <div class="form-group mt-3">
          <label for="inputImage">Image</label>
          <div class="field">
            <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
          </div>
        </div>
        
        <div class="form-group mt-3">
          <label for="inputIntroduction">Introduction</label>
          <div class="field">
          <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder: "" %>
          </div>
        </div>
        
        <div class="mt-3">
          <%= f.submit "Update User" %>
        </div>
        <% end %>
    </div>
  </div>
</div>