<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/9ece6fd7f3.js" crossorigin="anonymous"></script>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class= "bg-dark text-white pt-10">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <a class="lead">
              <%= link_to "Bookers", href= "/", class: 'nav-link text-white lead font-weight-bold' %>
            </a>
            <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
            <li class="nav-item">
              <!--アイコンと文字付きのリンク-->
              <%= link_to(user_path(current_user.id), class:"text-white") do %>
                <p class="pt-3"><i class="fa-solid fa-house"></i><span> Home</span></p>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to(users_path, class:"text-white") do %>
                <p class="pt-3 pl-3 pr-3"><i class="fa-solid fa-users"></i><span> Users</span></p>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to(books_path, class:"text-white") do %>
                <p class="pt-3"><i class="fa-solid fa-book-open"></i><span> Books</span></p>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to(destroy_user_session_path, method: :delete, class:"text-white") do %>
                <p class="pt-3 pl-3"><i class="fa-solid fa-right-from-bracket"></i><span> Log out</span></p>
              <% end %>
            </li>
            
            <% else %>
            <li class="nav-item">
              <a href= "/" class="nav-link text-white"><span class="fa-solid fa-house"></span> Home</a>
            </li>
            <li class="nav-item">
              <a href="/homes/about" class="nav-link text-white"><span class="fa-solid fa-link"></span> About</a>
            </li>
            <li class="nav-item">
              <a href="/users/sign_up" class="nav-link text-white"><span class="fa-solid fa-user-plus"></span> Sign up</a>
            </li>
            <li class="nav-item">
              <a href="/users/sign_in" class="nav-link text-white"><span class="fa-solid fa-right-to-bracket"></span> Log in</a>
            </li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    
    <%= yield %>
    
    <footer>
      <p class="text-center mt-5">CopyRight Infratop.inc</p>
    </footer>
  </body>
</html>
