<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/9ece6fd7f3.js" crossorigin="anonymous"></script>
  </head>

  <body class="d-flex flex-column vh-100">
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          
          <a class="navbar-brand" href= "/" class="lead text-white">Bookers</a>
          <div class="collapse navbar-collapse">
            
            <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
              <li class="nav-item">
                <!--アイコンと文字付きのリンク-->
                <%= link_to(user_path(current_user.id), class:"text-white") do %>
                  <p class="pt-3"><i class="fas fa-home"></i><span> Home</span></p>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to(users_path, class:"text-white") do %>
                  <p class="pt-3 pl-3 pr-3"><i class="fas fa-users"></i><span> Users</span></p>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to(books_path, class:"text-white") do %>
                  <p class="pt-3"><i class="fas fa-book-open"></i><span> Books</span></p>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to(destroy_user_session_path, method: :delete, class:"text-white") do %>
                  <p class="pt-3 pl-3"><i class="fas fa-sign-out-alt"></i><span> Log out</span></p>
                <% end %>
              </li>
              
              <% else %>
              <li class="nav-item">
                <a href= "/" class="nav-link text-white"><span class="fas fa-home"></span> Home</a>
              </li>
              <li class="nav-item">
                <a href="/home/about" class="nav-link text-white"><span class="fas fa-link"></span> About</a>
              </li>
              <li class="nav-item">
                <a href="/users/sign_up" class="nav-link text-white"><span class="fas fa-user-plus"></span> Sign up</a>
              </li>
              <li class="nav-item">
                <a href="/users/sign_in" class="nav-link text-white"><span class="fas fa-sign-in-alt"></span> Log in</a>
              </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    
    <%= yield %>
    
    <footer>
      <p class="text-center mt-5">CopyRight Infratop.inc</p>
    </footer>
  </body>
</html>
